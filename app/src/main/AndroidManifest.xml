<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nullcognition.creatingdynamicuiwithandroidfragments" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nullcognition.creatingdynamicuiwithandroidfragments.ActivityMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nullcognition.creatingdynamicuiwithandroidfragments.ActivityDetail"
            android:label="@string/title_activity_activity_detail"
            android:parentActivityName="com.nullcognition.creatingdynamicuiwithandroidfragments.ActivityMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nullcognition.creatingdynamicuiwithandroidfragments.ActivityMain" />
        </activity>
        <activity
            android:name="com.nullcognition.creatingdynamicuiwithandroidfragments.ActivityDynamic"
            android:label="@string/title_activity_activity_dynamic" >
        </activity>
        <activity
            android:name="com.nullcognition.creatingdynamicuiwithandroidfragments.ActivitySwipe"
            android:label="@string/title_activity_activity_swipe" >
        </activity>
        <activity
            android:name=".Pager"
            android:label="@string/title_activity_pager" >
        </activity>
    </application>

</manifest>
